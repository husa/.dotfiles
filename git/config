[user]
  name = husa
  email = 1536549+husa@users.noreply.github.com

[init]
  defaultBranch = master

[alias]
  pr = pull --rebase origin
  up = !git fetch --all --prune && git pull --rebase origin $(git symbolic-ref --short HEAD)
  po = push origin
  poH = push origin HEAD
  co = checkout
  s = switch
  st = status --short
  f = fetch
  fa = fetch --all --prune
  # d = !git diff --name-only --relative --diff-filter=d | xargs bat --diff
  # dc = !git diff --cached --name-only --relative --diff-filter=d | xargs bat --diff
  d = diff
  dc = diff --cached
  c = commit
  a = add
  # log/history
  # one-line graph with date and author
  history = log --graph --all --date short --date-order --pretty=format:'%C(auto)%h %d %s %C(cyan) %ad %C(cyan bold) %an'
  h = !git history
  # minimal one-line
  hs = log --graph --all --oneline
  unstage = reset HEAD
  cleanup = "!git branch --merged | grep f.*/ | xargs git branch -d"
  undo = "!f() { echo 'Are you sure you want to revert your last commit?(y/n)'; read answer; case \"$answer\" in y) git reset --soft HEAD^ && echo "done";; n) echo 'as you wish';; *) f;; esac; }; f";
  aliases = "!git config -l | grep alias | cut -c 7- | tr '=' '\t\t'"
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort

[core]
  eol = lf
  autocrlf = false
  ignorecase = false
  editor = nvim
  pager = delta

[pull]
  rebase = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[include]
    path = ~/.config/git/delta.themes.gitconfig

[delta]
  navigate = true     # use n and N to move between diff sections
  side-by-side = true # side-by-side view
  line-numbers = true
  features = colibri 

